---
export type CSSColors = {
    primary: string;
    secondary: string;
    background: string;
    backgroundAccent: string;
    text: string;
}

export type CSSTypeSizing = {
    sm: string;
    base: string;
    em: string;
    md: string;
    lg: string;
    xl: string;
    xxl: string;
}

export type CSSFonts = {
    main: string;
    accent?: string;
}

export interface Props {
    colors?: CSSColors;
    sizing?: CSSTypeSizing;
    fonts?: CSSFonts;
}

const {colors, sizing, fonts} = Astro.props as Props;
---
<body>
    <slot name="nav" />
    <slot name="main" />
    <slot name="footer" />
</body>

<!-- TODO: add global styles -->
<style define:vars={{ ...colors, ...sizing, ...fonts }}>
    body {
        --theme-primary: var(--primary);
        --theme-secondary: var(--secondary);
        --theme-bg: var(--background);
        --theme-bg-accent: var(--backgroundAccent);
        --theme-text: var(--text);
    }

    body {
        font-family: var(--main);
    }
</style>
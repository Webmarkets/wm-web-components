---
import { AstroComponent } from "astro/dist/types/runtime/server";
import Link from "../generic/Link.astro";
import { html } from "common-tags";

export interface Props {
    title: string;
    link?: string;
    children?: AstroComponent[];
    newTab?: boolean;
}

const { title, link, children, newTab = false } = Astro.props as Props;
---

{link
? html`<div>${title} ${children && html`<div class="children">${children}</div>`}</div>`
:
<Link title={title} href={link} newTab={newTab} />
}
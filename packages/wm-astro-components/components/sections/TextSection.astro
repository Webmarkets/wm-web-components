---
import type {SanitySection} from './SectionBuilder.astro';
import type {PortableTextBlock} from '@portabletext/types';
import PortableText from '../portableText/PortableText.astro';

export interface Text extends SanitySection {
    bodyText: PortableTextBlock[];
}

const { bodyText } = Astro.props as Text;
---

<section class="text-section">
    <PortableText portableText={bodyText} />
</section>
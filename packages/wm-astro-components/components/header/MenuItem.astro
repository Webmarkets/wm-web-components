---
import { html } from "common-tags";

export interface Props {
    title: string;
    link?: string;
    newTab?: boolean;
    children?: Props[];
}

const { title, link, newTab = false, children  } = Astro.props as Props;
---

<div class="nav__item">
    {link ? <a href={link} target={newTab ? "_blank" : "_self"} rel={newTab ? "noopener noreferrer" : ""} >{title}</a> : <span>{title}</span>}
</div>
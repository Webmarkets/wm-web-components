---
import PreviewCards from "./PreviewCards.astro";
import TagManager from "./TagManager.astro";

export interface Props {
    title: string;
    description: string;
    canonicalURL: URL | string;
    image: URL | string;
    gtmContainerID?: string;
}

const { title, description, canonicalURL, image, gtmContainerID } = Astro.props as Props
---

<head>
    <!-- Render Tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <!-- OpenGraph / Twitter Card -->
    <PreviewCards title={title} description={description} url={canonicalURL} image={image} />
    {gtmContainerID &&
    <TagManager containerID={gtmContainerID} />}
    <slot />
</head>